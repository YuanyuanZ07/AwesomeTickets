@model IEnumerable<AwesomeTickets.Models.Event>

@{
    ViewData["Title"] = "Home";
}

<h1 class="display-6 mb-3">Latest Events</h1>

<p>
    <a class="btn btn-primary" asp-controller="Events" asp-action="Create">+ Add Event</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Date</th>
            <th>Time</th>
            <th>Location</th>
            <th>Owner</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Category</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Time</td>
                <td>@item.Location</td>
                <td>@item.Owner</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-nowrap">
                    <a asp-controller="Events" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-controller="Events" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-controller="Events" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
